@page
@model TrainerManager.UI.Pages.Trainers.CreateModel
@{
    ViewData["Title"] = "Register New Trainer";
}

<div class="container py-5">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white text-center py-3">
                        <h5 class="mb-0">Profile Media</h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="bi bi-person-plus text-success" style="font-size: 3rem;"></i>
                            <p class="text-muted small">Upload photo and resume to complete the profile.</p>
                        </div>
                        <div class="mb-3 text-start">
                            <label class="form-label fw-bold small"><i class="bi bi-image me-2"></i>Profile Image</label>
                            <input asp-for="Command.ProfileImage" type="file" class="form-control form-control-sm" accept="image/*" />
                        </div>
                        <div class="mb-3 text-start">
                            <label class="form-label fw-bold small"><i class="bi bi-file-earmark-pdf me-2"></i>Resume (PDF)</label>
                            <input asp-for="Command.ResumeFile" type="file" class="form-control form-control-sm" accept=".pdf" />
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body">
                        <button type="submit" class="btn btn-success w-100 mb-2 shadow-sm">
                            <i class="bi bi-save me-2"></i>Save Trainer
                        </button>
                        <a asp-page="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-4 border-bottom pb-2">
                            <i class="bi bi-person-vcard me-2"></i>Personal Identification
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.FirstName" class="form-label small fw-bold">First Name *</label>
                                <input asp-for="Command.FirstName" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.LastName" class="form-label small fw-bold">Last Name</label>
                                <input asp-for="Command.LastName" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.Email" class="form-label small fw-bold">Business Email</label>
                                <input asp-for="Command.Email" class="form-control" type="email" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-4 border-bottom pb-2">
                            <i class="bi bi-telephone me-2"></i>Contact & Identity
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.MobileNumber" class="form-label small fw-bold">Mobile Number *</label>
                                <input asp-for="Command.MobileNumber" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.LinkedInUrl" class="form-label small fw-bold">LinkedIn URL</label>
                                <input asp-for="Command.LinkedInUrl" class="form-control" placeholder="https://linkedin.com/in/..." />
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Command.IdentityNumber" class="form-label small fw-bold">Identity Number (PAN/Aadhar/SSN)</label>
                                <input asp-for="Command.IdentityNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4 border-start border-warning border-4">
                    <div class="card-body">
                        <h5 class="card-title text-warning mb-4 border-bottom pb-2">
                            <i class="bi bi-passport me-2"></i>Visa Information
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.VisaType" class="form-label small fw-bold">Visa Type</label>
                                <input asp-for="Command.VisaType" class="form-control" placeholder="H1-B, B1, etc." />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.VisaCountry" class="form-label small fw-bold">Country</label>
                                <input asp-for="Command.VisaCountry" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.VisaExpiry" class="form-label small fw-bold">Expiry Date</label>
                                <input asp-for="Command.VisaExpiry" type="date" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4 border-start border-success border-4">
                    <div class="card-body">
                        <h5 class="card-title text-success mb-4 border-bottom pb-2">
                            <i class="bi bi-bank me-2"></i>Financial & Bank Details
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.Rate" class="form-label small fw-bold">Hourly Rate</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Command.Rate" class="form-control" type="number" step="0.01" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Currency" class="form-label small fw-bold">Currency</label>
                                <select asp-for="Command.Currency" class="form-select">
                                    <option value="INR">INR (₹)</option>
                                    <option value="USD">USD ($)</option>
                                    <option value="EUR">EUR (€)</option>
                                    <option value="GBP">GBP (£)</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.BankName" class="form-label small fw-bold">Bank Name</label>
                                <input asp-for="Command.BankName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.AccountNumber" class="form-label small fw-bold">Account Number</label>
                                <input asp-for="Command.AccountNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-4 border-bottom pb-2 d-flex justify-content-between">
                            <span><i class="bi bi-patch-check me-2"></i>Certifications</span>
                            <button type="button" class="btn btn-sm btn-primary" onclick="addCert()">+ Add</button>
                        </h5>
                        <div id="certContainer">
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-secondary mb-4 border-bottom pb-2">
                            <i class="bi bi-geo-alt me-2"></i>Location
                        </h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.Street" class="form-label small fw-bold">Street</label>
                                <input asp-for="Command.Street" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.City" class="form-label small fw-bold">City</label>
                                <input asp-for="Command.City" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Country" class="form-label small fw-bold">Country</label>
                                <input asp-for="Command.Country" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

<script>
    let certIndex = 0;
    function addCert() {
        const html = `
            <div class="row g-2 mb-2 align-items-end border p-2 rounded bg-light mx-0" id="cert_row_${certIndex}">
                <div class="col-md-5">
                    <label class="small fw-bold">Certification Name</label>
                    <input name="Command.Certifications[${certIndex}].Name" class="form-control form-control-sm" required />
                </div>
                <div class="col-md-4">
                    <label class="small fw-bold">Issuing Org</label>
                    <input name="Command.Certifications[${certIndex}].IssuingOrganization" class="form-control form-control-sm" />
                </div>
                <div class="col-md-2">
                    <label class="small fw-bold">Date</label>
                    <input name="Command.Certifications[${certIndex}].DateObtained" type="date" class="form-control form-control-sm" />
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-sm btn-danger w-100" onclick="this.closest('.row').remove()">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>`;
        document.getElementById('certContainer').insertAdjacentHTML('beforeend', html);
        certIndex++;
    }
</script>