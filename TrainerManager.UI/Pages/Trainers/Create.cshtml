@page
@model TrainerManager.UI.Pages.Trainers.CreateModel
@{
    ViewData["Title"] = "Register New Trainer";
}

<div class="container py-5">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">

            <!-- LEFT COLUMN -->
            <div class="col-lg-4">

                <!-- PROFILE MEDIA -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white text-center">
                        Profile Media
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Command.ProfileImage" class="form-label">Profile Image</label>
                            <input asp-for="Command.ProfileImage" type="file" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Command.ResumeFile" class="form-label">Resume (PDF)</label>
                            <input asp-for="Command.ResumeFile" type="file" class="form-control" accept=".pdf" />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100 mb-2">
                    Save Trainer
                </button>
                <a asp-page="Index" class="btn btn-outline-secondary w-100">
                    Cancel
                </a>
            </div>

            <!-- RIGHT COLUMN -->
            <div class="col-lg-8">

                <!-- PERSONAL DETAILS -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Personal Details</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.FirstName"></label>
                                <input asp-for="Command.FirstName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.LastName"></label>
                                <input asp-for="Command.LastName" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.Email"></label>
                                <input asp-for="Command.Email" type="email" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CONTACT & IDENTITY -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Contact & Identity</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.MobileNumber"></label>
                                <input asp-for="Command.MobileNumber" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Command.LinkedInUrl"></label>
                                <input asp-for="Command.LinkedInUrl" class="form-control" />
                            </div>

                            <div class="col-12">
                                <label asp-for="Command.IdentityNumber">
                                    Identity (PAN / Aadhar / ID)
                                </label>
                                <input asp-for="Command.IdentityNumber"
                                       class="form-control"
                                       placeholder="Enter PAN / Aadhar / ID Number" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- PROFESSIONAL DETAILS -->
                <div class="card shadow-sm mb-4 border-start border-info border-4">
                    <div class="card-body">
                        <h5 class="mb-3">Professional Details</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.TechField">Field</label>
                                <input asp-for="Command.TechField" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.Specialization"></label>
                                <input asp-for="Command.Specialization" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.Experience">
                                    Years of Experience
                                </label>
                                <input asp-for="Command.Experience"
                                       type="number"
                                       min="0"
                                       class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Command.LastCompanyName">
                                    Last Company
                                </label>
                                <input asp-for="Command.LastCompanyName"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- VISA DETAILS -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Visa Information</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.VisaType"></label>
                                <input asp-for="Command.VisaType" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.VisaCountry"></label>
                                <input asp-for="Command.VisaCountry" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.VisaExpiry"></label>
                                <input asp-for="Command.VisaExpiry"
                                       type="date"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FINANCIAL DETAILS -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Financial & Bank Details</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.Rate"></label>
                                <input asp-for="Command.Rate"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.Currency"></label>
                                <select asp-for="Command.Currency" class="form-select">
                                    <option value="INR">INR</option>
                                    <option value="USD">USD</option>
                                    <option value="EUR">EUR</option>
                                    <option value="GBP">GBP</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Command.BankName"></label>
                                <input asp-for="Command.BankName" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Command.AccountNumber"></label>
                                <input asp-for="Command.AccountNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- LOCATION / ADDRESS -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Location</h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.Street"></label>
                                <input asp-for="Command.Street" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.City"></label>
                                <input asp-for="Command.City" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.State"></label>
                                <input asp-for="Command.State" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.Zip">
                                    Zip / Postal Code
                                </label>
                                <input asp-for="Command.Zip" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Command.Country"></label>
                                <input asp-for="Command.Country" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CERTIFICATIONS -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Certifications</h5>
                        <div id="certContainer"></div>
                        <button type="button"
                                class="btn btn-sm btn-primary"
                                onclick="addCert()">
                            + Add Certification
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let certIndex = 0;

        function addCert() {
            document.getElementById('certContainer')
                .insertAdjacentHTML('beforeend', `
                <div class="row g-2 mb-2">
                    <div class="col-md-5">
                        <input name="Command.Certifications[${certIndex}].Name"
                               class="form-control"
                               placeholder="Certification Name" />
                    </div>
                    <div class="col-md-4">
                        <input name="Command.Certifications[${certIndex}].IssuingOrganization"
                               class="form-control"
                               placeholder="Issuing Organization" />
                    </div>
                    <div class="col-md-3">
                        <input name="Command.Certifications[${certIndex}].DateObtained"
                               type="date"
                               class="form-control" />
                    </div>
                </div>
            `);
            certIndex++;
        }
    </script>
}
