@page "/trainers"
@model TrainerManager.UI.Pages.Trainers.IndexModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Trainers</h2>
        <a asp-page="/Trainers/Create" class="btn btn-primary">Add New Trainer</a>
    </div>

    @if (Model.Data?.Items != null && Model.Data.Items.Any())
    {
        <table class="table table-hover border">
            <thead>
                <tr><th>Full Name</th><th>Actions</th></tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model.Data.Items)
                {
                    <tr>
                        <td>@trainer.FullName</td>
                        <td>
                            <a asp-page="/Trainers/Details" asp-route-id="@trainer.Id" class="btn btn-sm btn-info">View</a>
                            <a asp-page="/Trainers/Details" asp-route-id="@trainer.Id" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center py-5 shadow-sm">
            <i class="bi bi-people-fill" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No trainers found.</h4>
            <p class="text-muted">It looks like your database is empty. Let's add your first trainer!</p>
            <a asp-page="/Trainers/Create" class="btn btn-lg btn-primary mt-2">
                <i class="bi bi-plus-lg"></i> Add New Trainer
            </a>
        </div>
    }

