@page "{id:int}"
@model TrainerManager.UI.Pages.Trainers.DetailsModel

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Trainer Profile</h2>
        <div>
            <a asp-page="./Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
            <a asp-page="./Edit" asp-route-id="@Model.Trainer.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Edit Profile
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4 text-center p-4">
                <div class="position-relative d-inline-block mx-auto mb-3">
                    <img src="@(string.IsNullOrEmpty(Model.Trainer.ProfileImagePath) ? "/images/default-user.png" : Model.Trainer.ProfileImagePath)"
                         class="rounded-circle shadow" style="width:160px; height:160px; object-fit:cover;" />
                </div>
                <h3 class="fw-bold mb-1">@Model.Trainer.FullName</h3>
                <p class="text-primary fw-semibold mb-3">@Model.Trainer.Field</p>

                <div class="list-group list-group-flush text-start border-top">
                    <div class="list-group-item bg-transparent px-0 py-3">
                        <small class="text-muted d-block text-uppercase fw-bold">Business Email</small>
                        <span class="text-dark">@Model.Trainer.Email</span>
                    </div>
                </div>

                <div class="mt-4">
                    <h6 class="fw-bold small text-uppercase text-muted mb-3">Documents</h6>
                    <a href="@Model.Trainer.ResumePath" target="_blank"
                       class="btn btn-outline-danger w-100 @(string.IsNullOrEmpty(Model.Trainer.ResumePath) ? "disabled" : "")">
                        <i class="bi bi-file-earmark-pdf me-2"></i>View Resume
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h5 class="text-primary mb-4 border-bottom pb-2">
                        <i class="bi bi-briefcase me-2"></i>Professional Expertise
                    </h5>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted d-block">Primary Tech Field</label>
                            <span class="fs-6">@Model.Trainer.Field</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted d-block">Specialization</label>
                            <span class="fs-6">@(Model.Trainer.Specialization ?? "N/A")</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted d-block">Total Experience</label>
                            <span class="fs-6">@Model.Trainer.YearsOfExperience Years</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted d-block">Most Recent Company</label>
                            <span class="fs-6">@(Model.Trainer.LastCompanyName ?? "N/A")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h5 class="text-primary mb-4 border-bottom pb-2">
                        <i class="bi bi-geo-alt me-2"></i>Contact & Location
                    </h5>
                    <div class="row g-4">
                        <div class="col-12">
                            <label class="form-label small fw-bold text-muted d-block">Street Address</label>
                            <span class="fs-6">@Model.Trainer.Address.Street</span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small fw-bold text-muted d-block">City</label>
                            <span class="fs-6">@Model.Trainer.Address.City</span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small fw-bold text-muted d-block">State/Province</label>
                            <span class="fs-6">@Model.Trainer.Address.State</span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small fw-bold text-muted d-block">Postal Code</label>
                            <span class="fs-6">@Model.Trainer.Address.Zip</span>
                        </div>
                        <div class="col-12">
                            <label class="form-label small fw-bold text-muted d-block">Country</label>
                            <span class="fs-6">@Model.Trainer.Address.Country</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4 border-start border-success border-4">
                <div class="card-body p-4">
                    <h5 class="text-success mb-4 border-bottom pb-2">
                        <i class="bi bi-bank me-2"></i>Financial & Payment Details
                    </h5>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted d-block">Hourly Rate</label>
                            <span class="fs-5 fw-bold text-success">@Model.Trainer.Costing.HourlyRate @Model.Trainer.Costing.Currency / hr</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted d-block">Bank Details</label>
                            <span class="d-block fw-bold">@Model.Trainer.AccountDetails.BankName</span>
                            <span class="small text-muted">A/C: @Model.Trainer.AccountDetails.AccountNumber</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>