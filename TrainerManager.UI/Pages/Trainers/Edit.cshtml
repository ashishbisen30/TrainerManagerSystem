@page "{id:int}"
@model TrainerManager.UI.Pages.Trainers.EditModel
@{
    ViewData["Title"] = "Edit Trainer Profile";
}

<div class="container py-5">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Command.Id" />

        <div class="row">
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white text-center py-3">
                        <h5 class="mb-0">Profile Media</h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="bi bi-person-bounding-box text-primary" style="font-size: 3rem;"></i>
                            <p class="text-muted small">Update your profile photo and professional resume here.</p>
                        </div>

                        <div class="mb-3 text-start">
                            <label class="form-label fw-bold small"><i class="bi bi-image me-2"></i>Profile Image</label>
                            <input asp-for="Command.NewProfileImage" type="file" class="form-control form-control-sm" accept="image/*" />
                        </div>

                        <div class="mb-3 text-start">
                            <label class="form-label fw-bold small"><i class="bi bi-file-earmark-pdf me-2"></i>Resume (PDF)</label>
                            <input asp-for="Command.NewResumeFile" type="file" class="form-control form-control-sm" accept=".pdf" />
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body">
                        <button type="submit" class="btn btn-success w-100 mb-2 shadow-sm">
                            <i class="bi bi-check-circle me-2"></i>Save All Changes
                        </button>
                        <a asp-page="./Details" asp-route-id="@Model.Command.Id" class="btn btn-outline-secondary w-100">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-4 border-bottom pb-2">
                            <i class="bi bi-person-vcard me-2"></i>Personal Identification
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.FirstName" class="form-label small fw-bold required-label">First Name</label>
                                <input asp-for="Command.FirstName" class="form-control" placeholder="Enter first name" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.LastName" class="form-label small fw-bold">Last Name</label>
                                <input asp-for="Command.LastName" class="form-control" placeholder="Enter last name" />
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.Email" class="form-label small fw-bold">Business Email</label>
                                <input asp-for="Command.Email" class="form-control" placeholder="email@company.com" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-4 border-bottom pb-2">
                            <i class="bi bi-briefcase me-2"></i>Professional Expertise
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.Field" class="form-label small fw-bold">Primary Tech Field</label>
                                <input asp-for="Command.Field" class="form-control" placeholder="e.g. Full Stack Development" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.Specialization" class="form-label small fw-bold">Specialization</label>
                                <input asp-for="Command.Specialization" class="form-control" placeholder="e.g. React, .NET Core" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Experience" class="form-label small fw-bold">Total Experience (Years)</label>
                                <input asp-for="Command.Experience" type="number" class="form-control" />
                            </div>
                            <div class="col-md-8">
                                <label asp-for="Command.LastCompanyName" class="form-label small fw-bold">Most Recent Company</label>
                                <input asp-for="Command.LastCompanyName" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-4 border-bottom pb-2">
                            <i class="bi bi-geo-alt me-2"></i>Contact & Location
                        </h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.Street" class="form-label small fw-bold">Street Address</label>
                                <input asp-for="Command.Street" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.City" class="form-label small fw-bold">City</label>
                                <input asp-for="Command.City" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.State" class="form-label small fw-bold">State/Province</label>
                                <input asp-for="Command.State" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Zip" class="form-label small fw-bold">Postal Code</label>
                                <input asp-for="Command.Zip" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.Country" class="form-label small fw-bold">Country</label>
                                <input asp-for="Command.Country" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-5 border-start border-success border-4">
                    <div class="card-body">
                        <h5 class="card-title text-success mb-4 border-bottom pb-2">
                            <i class="bi bi-bank me-2"></i>Financial & Payment Details
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.Rate" class="form-label small fw-bold">Hourly Rate</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Command.Rate" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Currency" class="form-label small fw-bold">Currency</label>
                                <select asp-for="Command.Currency" class="form-select">
                                    <option value="INR">INR</option>
                                    <option value="USD">USD</option>
                                    <option value="EUR">EUR</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.BankName" class="form-label small fw-bold">Bank Name</label>
                                <input asp-for="Command.BankName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.AccountNumber" class="form-label small fw-bold">Account Number</label>
                                <input asp-for="Command.AccountNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>