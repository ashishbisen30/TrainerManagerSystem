@page "{id:int}"
@model TrainerManager.UI.Pages.Trainers.EditModel
@{
    ViewData["Title"] = "Edit Trainer Profile";
}

<div class="container py-5">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Command.Id" />

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold">Edit Profile</h2>
                <p class="text-primary mb-0">
                    Trainers / @Model.Command.FirstName @Model.Command.LastName
                </p>
            </div>
        </div>

        <div class="row g-4">

            <!-- LEFT -->
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white text-center">
                        Profile Media
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.CurrentProfileImagePath))
                        {
                            <img src="@Model.CurrentProfileImagePath"
                                 class="img-thumbnail mb-2"
                                 style="width:150px;height:150px;object-fit:cover;" />
                        }
                        else
                        {
                            <i class="bi bi-person-bounding-box"
                               style="font-size:3rem;"></i>
                        }

                        <div class="mb-3 text-start">
                            <label class="form-label small fw-bold">
                                New Profile Image
                            </label>
                            <input asp-for="Command.NewProfileImage"
                                   type="file"
                                   class="form-control form-control-sm"
                                   accept="image/*" />
                        </div>

                        <div class="mb-3 text-start">
                            <label class="form-label small fw-bold">
                                New Resume (PDF)
                            </label>
                            <input asp-for="Command.NewResumeFile"
                                   type="file"
                                   class="form-control form-control-sm"
                                   accept=".pdf" />
                        </div>
                    </div>
                </div>

                <button type="submit"
                        class="btn btn-success w-100 mb-2">
                    Save All Changes
                </button>

                <a asp-page="./Details"
                   asp-route-id="@Model.Command.Id"
                   class="btn btn-outline-secondary w-100">
                    Cancel
                </a>
            </div>

            <!-- RIGHT -->
            <div class="col-lg-8">

                <!-- PERSONAL -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Personal Details</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.FirstName"></label>
                                <input asp-for="Command.FirstName"
                                       class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.LastName"></label>
                                <input asp-for="Command.LastName"
                                       class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.Email"></label>
                                <input asp-for="Command.Email"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CONTACT -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Contact & Identity</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Command.MobileNumber"></label>
                                <input asp-for="Command.MobileNumber"
                                       class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.LinkedInUrl"></label>
                                <input asp-for="Command.LinkedInUrl"
                                       class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="Command.IdentityNumber">
                                    Identity (PAN / Aadhar / ID)
                                </label>
                                <input asp-for="Command.IdentityNumber"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- PROFESSIONAL -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Professional Details</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.TechField"></label>
                                <input asp-for="Command.TechField"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Specialization"></label>
                                <input asp-for="Command.Specialization"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Experience">
                                    Years of Experience
                                </label>
                                <input asp-for="Command.Experience"
                                       type="number"
                                       class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.LastCompanyName"></label>
                                <input asp-for="Command.LastCompanyName"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- VISA -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Visa Information</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.VisaType"></label>
                                <input asp-for="Command.VisaType"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.VisaCountry"></label>
                                <input asp-for="Command.VisaCountry"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.VisaExpiry"></label>
                                <input asp-for="Command.VisaExpiry"
                                       type="date"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FINANCIAL -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Financial & Bank Details</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Command.Rate"></label>
                                <input asp-for="Command.Rate"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Currency"></label>
                                <select asp-for="Command.Currency"
                                        class="form-select">
                                    <option value="INR">INR</option>
                                    <option value="USD">USD</option>
                                    <option value="EUR">EUR</option>
                                    <option value="GBP">GBP</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.BankName"></label>
                                <input asp-for="Command.BankName"
                                       class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Command.AccountNumber"></label>
                                <input asp-for="Command.AccountNumber"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- LOCATION -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3">Location</h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Command.Street"></label>
                                <input asp-for="Command.Street"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.City"></label>
                                <input asp-for="Command.City"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.State"></label>
                                <input asp-for="Command.State"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Zip">
                                    Zip / Postal Code
                                </label>
                                <input asp-for="Command.Zip"
                                       class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Command.Country"></label>
                                <input asp-for="Command.Country"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CERTIFICATIONS -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="mb-3 d-flex justify-content-between">
                            Certifications
                            <button type="button"
                                    class="btn btn-sm btn-primary"
                                    onclick="addCert()">
                                + Add
                            </button>
                        </h5>

                        <div id="certContainer">
                            @for (int i = 0; i < Model.Command.Certifications.Count; i++)
                            {
                                <div class="row g-2 mb-2">
                                    <div class="col-md-5">
                                        <input asp-for="Command.Certifications[i].Name"
                                               class="form-control"
                                               placeholder="Name" />
                                    </div>
                                    <div class="col-md-4">
                                        <input asp-for="Command.Certifications[i].IssuingOrganization"
                                               class="form-control"
                                               placeholder="Organization" />
                                    </div>
                                    <div class="col-md-3">
                                        <input asp-for="Command.Certifications[i].DateObtained"
                                               type="date"
                                               class="form-control" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let certIndex = @(Model.Command.Certifications?.Count ?? 0);

        function addCert() {
            document.getElementById('certContainer')
                .insertAdjacentHTML('beforeend', `
                <div class="row g-2 mb-2">
                    <div class="col-md-5">
                        <input name="Command.Certifications[${certIndex}].Name"
                               class="form-control"
                               placeholder="Name" />
                    </div>
                    <div class="col-md-4">
                        <input name="Command.Certifications[${certIndex}].IssuingOrganization"
                               class="form-control"
                               placeholder="Organization" />
                    </div>
                    <div class="col-md-3">
                        <input name="Command.Certifications[${certIndex}].DateObtained"
                               type="date"
                               class="form-control" />
                    </div>
                </div>
            `);
            certIndex++;
        }
    </script>
}
