@page "/trainers"
@model TrainerManager.UI.Pages.Trainers.IndexModel
@{
    ViewData["Title"] = "Trainers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Trainers</h2>
        <a asp-page="/Trainers/Create" class="btn btn-primary">Add New Trainer</a>
    </div>

    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by name or field..." />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>

    @if (Model.Data?.Items != null && Model.Data.Items.Any())
    {
        <table class="table table-hover border shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Full Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model.Data.Items)
                {
                    <tr>
                        <td class="align-middle">@trainer.FullName</td>
                        <td class="text-center">
                            <a asp-page="/Trainers/Details" asp-route-id="@trainer.Id" class="btn btn-sm btn-info">View</a>
                            <a asp-page="/Trainers/Edit" asp-route-id="@trainer.Id" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-2">
            <small class="text-muted">Total Records: @Model.Data.TotalCount</small>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No trainers found. Try a different search term or add a new trainer.
        </div>
    }
</div>